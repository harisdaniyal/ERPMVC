
@{
    ViewBag.Title = "Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<style>
    .custom-theme-color {
        /*background-color : #35a6a4 !important;*/
        color: white !important;
        background-color: #239023;
    }

    #_purchaseNo-error {
        color: #888888;
        font-size: 12px;
    }

    #_date-error {
        color: #888888;
        font-size: 12px;
    }

    #_creditDay-error {
        color: #888888;
        font-size: 12px;
    }

    #_partyList-error {
        color: #888888;
        font-size: 12px;
    }

    #_billNo-error {
        color: #888888;
        font-size: 12px;
    }

    #_vendorList-error {
        color: #888888;
        font-size: 12px;
    }
