    ViewBag.Title = "Facility";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div id="gridShow" class="card d-none">
    <div class="card-header" style="background:white;">
        <div class="row" style="margin-bottom:10px">
            <div class="col-sm-6 float-sm-left">
                <button type="submit" id="btnADD" class="btn btn-primary">Add Facility List</button>
            </div><!-- /.col -->

        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive">
                <table id="FacilityGride" class="table table-bordered" style="width: 100%;">
                    <thead class="_changeHeaderColor datatable-head">
                        <tr>
                            <th scope="col">Action</th>
                            <th scope="col">FacilityList</th>
                            <th scope="col">IsActive</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>


</div>
<div id="lloForm" class="card card-default collapse">
    <div class="card-header">
        <h3 class="card-title">DropDown Facility Name</h3>
    </div>

    
    <form id="_addCustomerReg">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtFacilityName">Facility Name<label id="_txtCustomerName-error" class="error" for="txtFacilityName"></label></label>
                        <div class="input-group">
                            <input type="text" id="txtFacilityName" name="txtFacilityName" class="form-control">
                        </div>
                        </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-check">
                        <label>Status</label>
                        <input type="checkbox" class="form-check" id="txtStatus" checked="checked">

                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
            <button type="button" id="btnBack" class="btn btn-primary">Back</button>

        </div>
    </form>
  
</div>


<div class="row" style='margin-top: 25px;'>
    <pre id='toastrOptions'></pre>
</div>
