@model IEnumerable<BA_ERPMVC.ViewModels.UserViewModel>
<link rel="stylesheet" href="~/AdminLte/dist/css/styles.css" />


@{
    ViewBag.Title = "GetUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div id="gridShow" class="card">
    <div class="card-header" style="background:white;">
        <div class="row" style="margin-bottom:10px">
            <div class="col-sm-6 float-sm-left">
                <h4>User-List</h4>
            </div><!-- /.col -->

        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-10 col-md-9 col-sm-12 col-xs-12 table-responsive center">
                <table id="example" class="table table-sm table-bordered mb-3 w-min-80">
                    <thead class="thead-light ">
                        <tr>
                            <th>UserName</th>
                            <th>CNIC</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-light tbl-valign-top">
                            <td>
                                <input type="hidden" value="0" class="form-control txt_ID" />
                                <input type="text" style="width: 250px;" value="" class="form-control txt_UserName" />
                            </td>
                            <td>
                                <input type="text" style="width: 250px;" value="" class="form-control txt_Cnic" />
                            </td>


                            <td class="btn-group">
                                <button type="button" class="btn btn-sm btn-block btn-success btn-v2 fs-8 text-nowrap mt-1 mb-0 btnSaveEdit">Save/Update</button>&ensp;
                                <button type="button" class="btn btn-sm btn-block btn-danger btn-v2 fs-8 text-nowrap mt-1 mb-0 btndlt">Delete</button>
                            </td>
                        </tr>
                        @foreach (var user in Model.ToList())
                        {
                            <tr class="bg-light tbl-valign-top">
                                <td>
                                    <input type="hidden" value="@user.ID" class="form-control txt_ID" />
                                    <input type="text" style="width: 250px;" value="@user.UserName" class="form-control txt_UserName" />
                                </td>

                                <td>
                                    <input type="number"style="width: 250px;" value="@user.CNIC" class="form-control txt_Cnic" />
                                </td>


                                <td class="btn-group">
                                    <button type="button" class="btn btn-sm btn-block btn-success btn-v2 fs-8 text-nowrap mt-1 mb-0 btnSaveEdit">Save/Update</button>&ensp;
                                    <button type="button" class="btn btn-sm btn-block btn-danger btn-v2 fs-8 text-nowrap mt-1 mb-0 btndlt">Delete</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- LOADING SHOW HIDE -->
        <div class="loading-dimmer"><img src="~/AdminLte/dist/img/loading.gif" /></div>
    </div>
</div>
<script src="@Fingerprint.Tag("/AdminLte/Scripts/Userlist.js")"></script>
