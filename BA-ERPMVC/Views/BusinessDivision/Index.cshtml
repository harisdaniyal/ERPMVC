    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<br />

<div id="gridShow" class="card d-none">
    <div class="card-header" style="background:white;">
        <div class="row" style="margin-bottom:10px">
            <div class="col-sm-6 float-sm-left">
                <button type="submit" id="btnADD" class="btn btn-primary">Add BussinessDivison Details</button>
            </div><!-- /.col -->

        </div>
    </div>


    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive">
                <table id="BusGride" class="table table-bordered" style="width: 100%;">
                    <thead class="_changeHeaderColor datatable-head">
                        <tr>
                            
                            <th scope="col">BusinessDivisionCode</th>
                            <th scope="col">BusinessDivisionName</th>
                            <th scope="col">CustomerName</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="lloForm" class="card card-default collapse">
    <div class="card-header">
        <h3 class="card-title">BussinessDivison Name</h3>
    </div>

    <form id="_addBussinessDivison">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtbusDivisonCode">BusinessDivisonCode<label id="_txtCustomerName-error" class="error" for="txtbusDivisonCode"></label></label>
                        <div class="input-group">
                            <input type="text" id="txtbusDivisonCode" name="txtbusDivisonCode" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtbusDivisonName">BusinessDivisonName<label id="_txtCustomerName-error" class="error" for="txtbusDivisonName"></label></label>
                        <div class="input-group">
                            <input type="text" id="txtbusDivisonName" name="txtbusDivisonName" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtCustomerName">Company Name<label id="_txtCustomerName-error" class="error" for="txtCustomerName"></label></label>
                        <div class="input-group">
                            <select class="form-control select2" id="txtCustomerName" name="txtCustomerName" style="width: 100%;">
                                <option selected="selected"></option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
            <button type="button" id="btnBack" class="btn btn-primary">Back</button>

        </div>
    </form>
</div>


<script src="~/AdminLte/Scripts/BusinessDivision.js"></script>