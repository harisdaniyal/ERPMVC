@model IEnumerable<BA_ERPMVC.ViewModels.OrderBooking.ImportBookingReportViewModel>

@{
    ViewBag.Title = "TrainReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Import Train Report</h2>
<br />


